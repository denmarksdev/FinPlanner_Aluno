<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_extra_large"
        android:layout_marginTop="@dimen/margin_large"
        tools:context=".presentation.FirstFragment">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/portfolio_graph"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <include layout="@layout/portfolio_summary"
            android:id="@+id/selected_period_detail"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/portfolio_graph"/>
        <com.itsession.finplanner.presentation.uicomponents.CustomSeekBar
            android:id="@+id/seek_bar_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/selected_period_detail"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.itsession.finplanner.presentation.uicomponents.CustomSeekBar
            android:id="@+id/seek_bar_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/seek_bar_rate"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.itsession.finplanner.presentation.uicomponents.CustomSeekBar
            android:id="@+id/seek_bar_unique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/seek_bar_month"
            app:layout_constraintStart_toStartOf="parent"/>
        <Button
            android:visibility="gone"
            android:id="@+id/button_apply_all"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginVertical="@dimen/margin_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_to_next_years"
            app:layout_constraintTop_toBottomOf="@id/seek_bar_unique"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:visibility="gone"
            android:id="@+id/button_edit_personal_data"
            android:layout_marginHorizontal="@dimen/margin_large"
            android:layout_marginVertical="@dimen/margin_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_personal_data"
            app:layout_constraintTop_toBottomOf="@id/button_apply_all"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>