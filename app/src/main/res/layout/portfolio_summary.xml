<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/portfolio_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:paddingBottom="@dimen/margin_default"
    android:alpha="0.6"
    android:elevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/age"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Idade: 28 anos"/>
    <TextView
        android:id="@+id/patrimony"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/age"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Patrimônio total projetado: R$ 53000"/>
    <TextView
        android:id="@+id/patrimony_percentage_savings"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/patrimony"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Aportes como % do patrimônio"/>
    <TextView
        android:id="@+id/patrimony_percentage_passive_income"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/patrimony_percentage_savings"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Renda passiva como % do patrimônio"/>
    <TextView
        android:id="@+id/savings"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/patrimony_percentage_passive_income"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Total de aportes realizados até 12/2023: R$ 26000"/>
    <TextView
        android:id="@+id/current_passive_income"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/savings"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Renda passiva ano 2023: R$ 7000"/>
    <TextView
        android:id="@+id/total_passive_income"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/current_passive_income"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Renda passiva acumulada: R$ 14000"/>
    <TextView
        android:id="@+id/monthly_passive_income"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/total_passive_income"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Renda passiva média: R$ 1000"/>
</androidx.constraintlayout.widget.ConstraintLayout>