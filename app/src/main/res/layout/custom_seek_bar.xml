<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/custom_seek_bar_title"
        style="@style/TextAppearance.Material3.LabelLarge"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rentabilidade esperada:"/>
    <SeekBar
        android:layout_marginTop="@dimen/margin_large"
        android:id="@+id/custom_seek_bar"
        android:layout_margin="@dimen/margin_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:thumbTint="@color/accent"
        android:progressTint="@color/accent"
        android:max="@integer/maxSeekBar"
        app:layout_constraintTop_toBottomOf="@id/custom_seek_bar_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:layout_marginHorizontal="@dimen/margin_default"
        android:id="@+id/custom_seek_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10%"
        style="@style/TextAppearance.Material3.LabelLarge"
        app:layout_constraintTop_toBottomOf="@id/custom_seek_bar"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>